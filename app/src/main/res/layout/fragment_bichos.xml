<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF2F2"
    android:orientation="vertical"
    tools:context=".Fragment.BichosFragment">


    <ImageView
        android:id="@+id/imageCao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="60dp"
        android:onClick="tocarSom"
        android:src="@drawable/cao"
        app:layout_constraintBottom_toTopOf="@+id/imageGato"
        app:layout_constraintEnd_toStartOf="@+id/imageMacaco"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/imageGato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/gato"
        app:layout_constraintBottom_toTopOf="@+id/imageLeao"
        app:layout_constraintEnd_toStartOf="@+id/imageOvelha"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageCao" />

    <ImageView
        android:id="@+id/imageLeao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="60dp"
        android:layout_weight="1"
        android:src="@drawable/leao"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageVaca"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageGato" />

    <ImageView
        android:id="@+id/imageMacaco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="40dp"
        android:layout_weight="1"
        android:src="@drawable/macaco"
        app:layout_constraintBottom_toTopOf="@+id/imageOvelha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageCao"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageOvelha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="40dp"
        android:layout_weight="1"
        android:src="@drawable/ovelha"
        app:layout_constraintBottom_toTopOf="@+id/imageVaca"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageGato"
        app:layout_constraintTop_toBottomOf="@+id/imageMacaco" />

    <ImageView
        android:id="@+id/imageVaca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="40dp"
        android:layout_weight="1"
        android:src="@drawable/vaca"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageLeao"
        app:layout_constraintTop_toBottomOf="@+id/imageOvelha" />
</androidx.constraintlayout.widget.ConstraintLayout>